        <Label Content="用户名：" HorizontalAlignment="Left" Margin="22,14.999,0,0" VerticalAlignment="Top"/>
        <Label Content="密码：" HorizontalAlignment="Left" Margin="34,43.835,0,0" VerticalAlignment="Top"/>
        <TextBox Name="userName" HorizontalAlignment="Left" Height="23" Margin="80,14.999,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145.567"/>
